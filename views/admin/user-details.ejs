<%- include('includes/header') %>

     
        
       
        <div class="container-xl" style="width: 100%;">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-5">
                                <h2>User <b>Management</b></h2>
                            </div>
                            
                        </div>
                    </div>
    
    
    
                    <form action="/admin" method="post" id="">
                        <table id="admin_table" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>UserName</th>			
                                    <th>Email</th>			
                                  
                                    <th>Status</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody>
         <% for(var i = 0 ;i< data.length; i++) {%>             
        <tr>
            <td><%= i+1%></td>
            <td><%= data[i].name%></td>
            <td><%= data[i].email%></td>
                                
            <td><%= data[i].loginStatus%></td>
            <td>
                <% if (data[i].loginStatus){%>
                   
                <a href="/admin/block-user?id=<%=data[i]._id%>" class="btn border-shadow update " id=""><span class="text-gradient"><i class="fa-solid fa-lock"></i></span></a>
                
                <%} else { %>
                    <a href="/admin/unblock-user?id=<%=data[i]._id%>" class="btn border-shadow update " id=""><span class="text-gradient"><i class="fa-solid fa-lock-open"></i></span></a>
                <% } %>
                <a href="/admin/single-user?id=<%=data[i]._id%>" class="btn border-shadow update delete"><span class="text-gradient "><i class="fa-solid fa-eye"></i></span></a>                           
             </td>
        </tr>
        <%}%>
    <!-- {{/each}} -->
                            </tbody>
                        </table>
                    </form>


                   
                </div>
            </div>
        </div>  
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>   
    
        <script>
  $(document).ready( function () {
    $('#admin_table').DataTable();
} );
    
        </script>

<link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
            
           
        </div>
    </div>
</div>  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>   
