    <title>Admin login</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Admin Login</h2>
        </div>
        <% if(emailStatus){%>
            <h6>wrong email......!</h6>
        <%}else if (passStatus){%>
            <h6>wrong password......!</h6>
         <%}%>
        <form  action="/admin/admin_login" name="f1" id="login" class="form" method="post">
                <div class="input-box">
                <span class="label">E-mail</span>
                <div class=" flex-r input">
                <input type="text" name="email" id="inpe" placeholder="example@gmail.com" >
                <i class="fas fa-at"></i>
                </div>
                <small id="pemail" style="color: red;"></small>
                </div>
  
            <div class="input-box">
              <span class="label">Password</span>
              <div class=" flex-r input">
                <input type="password" name="password" id="inpa" placeholder="********" >
                <i class="fas fa-at"></i>
              </div>
              <small id="ppassword" style="color: red;"></small>
            </div>
           
  
            <input class="btn" type="submit"  value="Sign-up">
            <a class="mt-3"  href="/admin/sign-up">Don't have account ?</a>
            
          </form>
  
        </div>
      </div>
    </div>
   <style>
    .error{
        color :red;
        font-size: 13px;
    }
   </style>
</body>
<script src="/js/validation.js"></script>
</html>