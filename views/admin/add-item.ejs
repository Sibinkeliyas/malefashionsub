    function viewImage2(event) {
    var fileInput2 = document.getElementById('id_image2');
    var filePath2 = fileInput2.value;
    var allowedExtensions = /(\.jpg)$/i;
    // if (!allowedExtensions.exec(filePath2)) {
    //   fileInput1.value = '';
