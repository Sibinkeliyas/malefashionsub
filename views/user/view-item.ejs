<script>
    function cartButton(productID){
        $.ajax({
            url:'/add-to-cart?id='+productID,
            method:'get',
            success : (response)=>{
                if(response.status){
                    Swal.fire({
                    type: 'success',
                    title: 'Added to cart',
                    showConfirmButton: false,
                    timer: 2000

                    
                    })
